<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Zuckerlkoalition - Beiträge</title>
  <link href="/styles.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-900">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-center">Beiträge der Zuckerlkoalition</h1>
    <div class="space-y-8">
      <% posts.forEach(post => { %>
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <h2 class="text-2xl font-semibold mb-2"><%= post.title %></h2>
          <p class="text-gray-700 text-sm mb-2"><%= post.date %></p>
          <p class="text-gray-700"><%= post.content.substring(0, 200) %>...</p>
          <a href="<%= post.url %>" class="text-blue-500 hover:underline mt-4 block"><%= post.src %></a>
          <% if (post.tags && typeof post.tags === 'object') { %>
            <% Object.entries(post.tags).forEach(([tag, keywords]) => { %>
              <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mt-2">
                <%= tag %> (<%= keywords.join(", ") %>)
              </span>
            <% }); %>
          <% } %>
        </div>          
      <% }); %>
    </div>
  </div>
</body>
</html>
